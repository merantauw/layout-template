<script>
    $(document).ready(function() {
        $('[data-fancybox="gallery"]').fancybox({
            buttons: [
                'slideShow',
                'share',
                'zoom',
                'fullScreen',
                'download',
                'close'
            ],
            thumbs: false, // Отключаем миниатюры
